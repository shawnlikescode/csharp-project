@{
    ViewData["Title"] = "Login/Registration";
}
@model User

<div class="text-center">
    <h1 class="display-4">EXAM</h1>
    <div class="row">
        <div class="col-sm-5">
            <h1>Register</h1>
            <form asp-action="Register" method="post">
                <div class="form-group text-left">
                    <label for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label for="Email">Email</label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @* <div class="form-group text-left">
                    <label for="DoB">Date of Birth</label>
                    <input asp-for="DoB" class="form-control"/>
                    <span asp-validation-for="DoB" class="text-danger"></span>
                </div> *@
                <div class="form-group text-left">
                    <label for="Password">Password</label>
                    <input asp-for="Password" class="form-control"/>
                    <small class="text-warning">Password must be at least 8 characters and contain at least 1 letter, 1 numbers, and 1 special character</small>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" class="form-control"/>
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>
                <input type="submit" value="Create Account" class="btn btn-primary">
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h1>Login</h1>
            <partial name="_login"/>
        </div>
    </div>
</div>