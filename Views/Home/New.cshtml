@model Activity
<div class="container">
    <form action="Create" method="POST">
        <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" type="text" asp-for="Title">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control"  asp-for="Date" id="Date">
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Length"></label>
        <div class="row">
            <input class="form-control col"  type="number" asp-for="Length" placeholder="Enter Duration">
            <select  class="form-control col"  asp-for="Time">
                <option value="Hours">Hours</option>
                <option value="Minutes">Minutes</option>
                <option value="Days">Days</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="Length"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea  class="form-control"  asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
        <input  class="btn btn-info"  type="submit" value="Create Activity">
    </form>
</div>